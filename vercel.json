{
    "version": 2,
    "trailingSlash": false,
    "cleanUrls": true,
    "redirects": [
        {
            "source": "/index.html",
            "destination": "/",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|webp|ico)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "installCommand": "npm ci",
    "buildCommand": "npm run build"
}